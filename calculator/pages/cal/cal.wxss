
/* pages/cal/cal.wxss */

page{
    height: 100%
}

.content{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box; 
  padding-top: 30rpx;
  /* background-image: url('../../images/bg.jpg'); */
  background:#d9eef7;
}

.screen{
  background-color: #ffffff;
  border-radius: 3px;
  text-align: right;
  /*计算机的结果靠右边的  */
  width: 720rpx;
  /*默认宽度750  */
  height: 100prx;
  line-height: 100rpx;
  /*字体高度和框的高度一样  */
  padding-right: 10rpx;
  margin-bottom:  30rpx;
}

.btnGroup{
  display: flex;
  flex-direction: row;
  
}

.item{
   width: 160rpx; 
  /*每一个item的宽度  */
   min-height: 150rpx; 
    margin: 10rpx;  
   /* text-shadow: 0 1px 1px rgba(0, 0, 0, .3);  */
   border-radius: 5px; 
   text-align: center; 
   line-height: 150rpx;  
   /*文字居中  */
}

.orange{
   border: solid 1px #0076a3; 
   /*边框  */
   background: #f78d1d; 
   /*背景色  */
   color: #d9eef7; 
   /*字体颜色  */
}

.blue{
    color: #d9eef7;
    border: solid 1px #0076a3;
    background: #0095cd;
}
